    # preemptible  = true
    machine_type = "e2-micro"
    disk_type = "pd-standard"
    disk_size_gb = 10
    image_type = "UBUNTU_CONTAINERD"
    tags         = ["gke-node", "${var.project_id}-gke"]
    metadata = {
      disable-legacy-endpoints = "true"
    }
  }
}


